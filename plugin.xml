<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="translation.handlers.SampleHandler"
            commandId="translation.commands.sampleCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="translation.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="translation.commands.category"
            id="translation.commands.sampleCommand"
            name="翻译">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="translation.menus.sampleMenu"
               label="翻译"
               mnemonic="M">
            <command
                  commandId="translation.commands.sampleCommand"
                  id="translation.menus.sampleCommand"
                  mnemonic="S">
            </command>
            <separator
                 name="translation.menus.sampleGroup"> 
           </separator>
         </menu>
      </menuContribution>
   </extension>
   <extension
	      point="org.eclipse.ui.actionSets">
	   <actionSet
	         label="Translation Action Set"
	         visible="false"
	         id="translation.actionSet">
	       <action
			      label="翻译配置"
			      icon="icons/translation.png"
			      class="translation.actions.SampleAction"
			      tooltip="翻译配置"
			      menubarPath="translation.menus.sampleMenu/translation.menus.sampleGroup"
			      toolbarPath="translation.menus.sampleGroup"
			      id="translation.actions.SampleAction"> 
			</action>
	   </actionSet>
	</extension>

</plugin>
